<%- include('../header'); -%>
  <div class="container text-center my-auto">
    <h1 class="display-2">Crea un Usuario</h1>
    <form action="/auth/signup" method="POST">
      <div class="form-group">
        <label for="email">Direccion Email</label>
        <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Ingresa email">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" id="password" placeholder="Password" maxlength="10">
      </div>
      <button type="submit" class="btn btn-primary">Crea Usuario</button>
    </form>
  </div>
<%- include('../footer'); -%>